{% assign icon_url = "/assets/img/favicons" | relative_url %}

{
  "name": "{{ site.title }}",
  "short_name": "{{ site.title }}",
  "description": "{{ site.description }}",
  "icons": [
    {
      "src": "{{ icon_url }}/favicon-32x32.png",
      "sizes": "36x36",
      "type": "image/png",
      "density": "0.75"
    },
    {
      "src": "{{ icon_url }}/favicon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "density": "2.0"
    },
    {
      "src": "{{ icon_url }}/android-chrome-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "density": "4.0"
    }],
    "start_url": "{{ '/index.html' | relative_url }}",
    "display": "fullscreen",
    "theme_color": "#2a1e6b",
    "background_color": "white"
}
